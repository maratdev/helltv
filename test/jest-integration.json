{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testMatch": ["**/test/integration/**/*.spec.ts"],
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", {
      "transpilation": true
    }]
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s"
  ],
  "coverageDirectory": "coverage",
  "setupFilesAfterEnv": ["<rootDir>/setup-integration.ts"],
  "testTimeout": 30000,
  "maxWorkers": 1
}
